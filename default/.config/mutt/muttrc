set my_conf_dir = $HOME/.config/mutt

source $my_conf_dir/colors.conf
source $my_conf_dir/keys.conf
source $my_conf_dir/accounts/accounts.conf

auto_view = text/html
set abort_nosubject     = no
set alias_file          = $my_conf_dir/alias
set beep                = no
set beep_new            = no
set certificate_file    = $my_conf_dir/certificates
set charset             = "utf-8"
set check_new           = yes
set confirmappend       = no
set copy                = yes
set date_format         = "%F, %T"
set edit_headers        = no
set editor              = "nvim -c \"set spell spelllang=fr\""
set send_charset        = "utf-8"
set fast_reply          = yes
set fcc_attach          = yes
set forward_decode      = yes
set forward_format      = "Fwd: %s"
set forward_quote       = yes
set help                = yes # You might want to remove that now.
set history_file        = history
set include             = yes
set indent_str          = "> "
set my_col_subject      = `echo $(($(tput cols)-66))`
set index_format        = "%4C %-16.16F: %-$my_col_subject.${my_col_subject}s %> %[%F, %T] %Z"
set mailcap_path        = $my_conf_dir/mailcap
set quit                = yes
set reply_self          = no
set reply_to            = yes
set resolve             = yes
set reverse_alias       = yes
set reverse_name        = yes
set sleep_time          = 0
set sort                = threads
set sort_aux            = last-date
set sort_re             = yes
set status_chars        = " *%A"
set status_format       = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"
set uncollapse_jump     = yes
set use_from            = yes
set use_envelope_from   = yes
set user_agent          = no
set wait_key            = yes
set weed                = yes
set wrap_search         = yes
set xterm_set_titles    = no
set text_flowed         = yes

set sidebar_delim_chars   = "/"
set sidebar_format        = "%B %> %N"
set sidebar_short_path    = yes
set sidebar_visible       = yes
set sidebar_width         = 16

set timeout = 600
startup-hook '`nohup mbsync -a --quiet --quiet >/dev/null &`'
timeout-hook '`nohup mbsync -a --quiet --quiet >/dev/null &`'
shutdown-hook '`nohup mbsync -a --quiet --quiet >/dev/null &`'

ignore *
unignore from: to: cc: date: subject:
unhdr_order *
hdr_order from: to: cc: date: subject:
