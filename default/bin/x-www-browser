#!/bin/sh
# Choose whether to open urls with mpv or firefox.

browser="firefox"

if [ "$#" -eq "0" ] ; then
    $browser 2>/dev/null 1>&2 &
    exit
fi

for URL in "$@"; do
    case "$URL" in
        *youtube.com*|*youtu.be*|*vimeo.com*|*.webm|*.mkv|*.mp4)
            nohup mpv --no-terminal "$URL" &
            ;;
        *)
            nohup $browser "$URL" 2>/dev/null 1>&2 &
    esac
done
